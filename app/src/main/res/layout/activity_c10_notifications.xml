<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FBE7"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/anchor_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Notifications"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivBack" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="@string/notificationcustomizationnote"
            android:textColor="#757575"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notificationheadertitle"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/notifications"
                    android:textColor="#757575"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swPush"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Push Notifications"
                    android:textColor="#757575" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swBadge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="App Icon Badge"
                    android:textColor="#757575" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swLockScreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lock Screen Notifications"
                    android:textColor="#757575" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Preferences"
                    android:textColor="#757575"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swMenuUpdates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Menu Updates"
                    android:textColor="#757575" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swPaymentUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payment Update"
                    android:textColor="#757575" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swOrderPreparation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order Preparation"
                    android:textColor="#757575" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swOrderReady"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order Ready"
                    android:textColor="#757575" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swPromotions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Promotions"
                    android:textColor="#757575" />

                <Button
                    android:id="@+id/btnSaveNotifications"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="40dp"
                    android:backgroundTint="#1F5D87"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:cornerRadius="16dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>